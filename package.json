{
  "name": "prettier-plugin-prisma",
  "version": "0.1.2",
  "description": "Prettier plugin for Prisma files",
  "repository": "git@github.com:umidbekkarimov/prettier-plugin-prisma.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "main": "dist/plugin.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:rust": "esbuild src/plugin.ts --bundle --outdir=dist --target=node12 --platform=node",
    "build:ts": "esbuild src/plugin.ts --bundle --outdir=dist --target=node12 --platform=node",
    "bump": "np --no-2fa",
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write",
    "tdd": "jest --watch",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".ts": "esbuild-jest"
    }
  },
  "devDependencies": {
    "@prisma/sdk": "^2.15.0",
    "@types/deasync": "^0.1.1",
    "@types/jest": "^26.0.20",
    "@types/prettier": "^2.1.6",
    "esbuild": "^0.8.37",
    "esbuild-jest": "^0.3.0",
    "jest": "^26.6.3",
    "np": "^7.2.0",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-packagejson": "^2.2.9",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@prisma/sdk": ">=2",
    "prettier": ">=2"
  }
}
