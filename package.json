{
  "name": "prettier-plugin-prisma",
  "version": "0.1.2",
  "description": "Prettier plugin for Prisma files",
  "repository": "git@github.com:umidbekkarimov/prettier-plugin-prisma.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "main": "dist/plugin.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "bump": "np --no-2fa",
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write",
    "pretdd": "yarn build",
    "tdd": "jest --watch",
    "test": "jest"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "transform": {
      ".ts": "esbuild-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/prettier": "^2.1.6",
    "esbuild": "^0.8.37",
    "esbuild-jest": "^0.3.0",
    "execa": "^5.0.0",
    "jest": "^26.6.3",
    "np": "^7.2.0",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-packagejson": "^2.2.9",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "prettier": ">=2"
  },
  "engines": {
    "node": ">=12"
  }
}
